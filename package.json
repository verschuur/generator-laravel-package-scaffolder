{
  "name": "generator-laravel-package-scaffolder",
  "version": "1.5.1",
  "description": "A Yeoman generator to quickly scaffold a Laravel package.",
  "homepage": "http://github.com/verschuur/generator-laravel-package-scaffolder",
  "author": {
    "name": "Govert Verschuur",
    "email": "govert.verschuur@gmail.com",
    "url": "http://github.com/verschuur"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "laravel",
    "package",
    "scaffold",
    "scaffolding",
    "yeoman-generator",
    "yo"
  ],
  "devDependencies": {
    "eslint": "^7.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-xo": "^0.32",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.0",
    "yeoman-assert": "^3.1",
    "yeoman-test": "^3.0"
  },
  "engines": {
    "npm": "^6.13"
  },
  "dependencies": {
    "chalk": "^4.0",
    "npm": "^7.5.2",
    "username": "^5.1",
    "yeoman-generator": "^4.12.0",
    "yosay": "^2.*"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier",
      "markdownlint-cli"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest",
    "format": "prettier-standard 'generators/**/*.js'"
  },
  "repository": "verschuur/generator-laravel-package-scaffolder",
  "license": "MIT"
}
